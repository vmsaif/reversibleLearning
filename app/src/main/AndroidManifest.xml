<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="flashcard.group5.application">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Group5">
        <activity android:name="presentation.CardviewActivity"></activity>
        <activity
            android:name="presentation.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name="presentation.OptionsActivity" />
        <activity android:name="presentation.FlashcardActivity" />
        <activity android:name="presentation.ProfileCreationView"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
