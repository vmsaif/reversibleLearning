<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yollowish"
    android:visibility="visible"
    tools:context="presentation.AddToFolderActivity">

    <TextView
        android:id="@+id/addFolderTitle"
        android:layout_width="308dp"
        android:layout_height="69dp"
        android:layout_marginStart="89dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="89dp"
        android:layout_marginBottom="555dp"
        android:background="@color/yollowish"
        android:gravity="center"
        android:text="@string/addToFolder"
        android:textAlignment="center"
        android:textColor="@color/grayish"
        android:textSize="30sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/list_folders"
        android:layout_width="406dp"
        android:layout_height="450dp"
        android:layout_marginTop="105dp"
        android:layout_marginEnd="1dp"
        android:background="@color/dark_ocean_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addFolderTitle" />

    <Button
        android:id="@+id/button"
        android:layout_width="146dp"
        android:layout_height="37dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="133dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/yollowishButtonColor"
        android:onClick="openAddFolderActivity"
        android:text="@string/create_folder"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/list_folders"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addFolderTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>